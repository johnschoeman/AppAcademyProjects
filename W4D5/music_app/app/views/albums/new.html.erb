<h1>Create An Album for <%= @band.name %></h1>

<form class="" action="/albums" method="post">
  <%= auth_token %>

  <label for="album_title">Title: </label>
  <input type="text" name="album[title]" id="album_title" value="">

  <br>

  <label for="album_yr">Year: </label>
  <input type="text" name="album[yr]" id="album_yr" value="">

  <br>

  <div class="radio_buttons">
    <label for="album_type">Type: </label>
    <label for="album_type_live">Live </label>
    <input type="radio" id="album_type_live" name="album[live]" value="true">
    <label for="album_type_studio">Studio </label>
    <input type="radio" id="album_type_studio" name="album[live]" value="false">
  </div>

  <br>
  <br>
  <input type="hidden" name="album[band_id]" value="<%= @band.id %>">

  <input type="submit" value="Create Album">
</form>
