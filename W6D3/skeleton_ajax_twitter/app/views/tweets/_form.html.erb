<h2>New Tweet!</h2>
<form data-tweets-ul="#feed" class="tweet-compose" action="/tweets" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
    <strong class="chars-left"></strong>
  </label>
  <br>

  <label>
    Mention
    <script id="add-mention-script" type="text/template">
      <div class="testing">
        <select name="tweet[mentioned_user_ids][]">
        <option></option>
        <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
        </select>
      <a class="remove-mentioned-user" href="#">Remove Mention</a>
      </div>
    </script>
    <a class="add-mentioned-user" href="#">Add Mention</a>
    <div class="mentioned-users">
    </div>
  </label>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>
