<h1>Request A Cat!</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <select name="cat_rental_request[cat_id]">
    <option value="" disabled selected >--Choose Cat--</option>
    <% @cats.each do |cat| %>
       <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]" value="">

  <br>

  <label for="end_date">End Date</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]" value="">

  <br>
  <br>

  <input type="submit" name="" value="Submit your request">
</form>
